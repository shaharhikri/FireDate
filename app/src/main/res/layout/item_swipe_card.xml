<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingHorizontal="40sp"
    android:paddingVertical="20sp"
    android:outlineProvider="bounds"
    android:clipToPadding="false">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_CARD_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardCornerRadius="4dp"
        android:elevation="2dp">

        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="170dp">

            <ImageView
                android:id="@+id/card_IMG_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/card_TXT_name"
                android:textSize="40sp"
                android:textColor="@android:color/black"
                android:gravity="center"
                tools:text="Hello FireDate!"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <View
                android:id="@+id/card_VIEW_leftIndicator"
                android:alpha="0"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:background="#00FF0A" />

            <View
                android:id="@+id/card_VIEW_rightIndicator"
                android:alpha="0"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="10dp"
                android:layout_gravity="right"
                android:background="#FF1100" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>