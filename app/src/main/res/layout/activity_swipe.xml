<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eef4f6"
    tools:context=".activities.Activity_Swipe">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

            <Button
                android:id="@+id/swipe_BTN_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="logout"/>

            <Button
                android:id="@+id/swipe_BTN_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="settings" />

            <Button
                android:id="@+id/swipe_BTN_chats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="chats" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/swipe_BTN_3dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="18dp"
            android:layout_marginHorizontal="18dp"
            android:outlineAmbientShadowColor="#00838383"
            android:outlineSpotShadowColor="#00838383"
            app:srcCompat="@drawable/ic_3dots"/>

    </LinearLayout>


    <com.lorentzos.flingswipe.SwipeFlingAdapterView
        android:id="@+id/swipe_FRM_cards"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        app:rotation_degrees="15.5"
        tools:context=".activities.Activity_Swipe" />



